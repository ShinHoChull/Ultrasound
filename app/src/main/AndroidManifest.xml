<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.m2comm.ultrasound">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:protectionLevel="signature" />
    <permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">

        <activity android:name=".views.PopWebviewActivity"></activity>
        <activity android:name=".views.ContentActivity"></activity>
        <activity
            android:name=".views.SubMenuActivity"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".views.BottomMenu"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity android:name=".views.MenuActivity" />
        <activity
            android:name=".views.LoginActivity"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".views.IntroActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.CalendarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>